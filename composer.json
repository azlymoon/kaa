{
    "name": "kaa/kaa",
    "description": "Kaa Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitrij Abramov"
        }
    ],
    "autoload": {
        "psr-4": {
            "Kaa\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.2",
        "vkcom/kphp-polyfills": "dev-master",
        "haydenpierce/class-finder": "dev-master",
        "nette/php-generator": "^4.0",
        "symfony/filesystem": "^6.2"
    },
    "require-dev": {
        "danil42russia/phpstan-kphp": "*",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpdoc-parser": "^1.15",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-latest",
        "spaze/phpstan-disallowed-calls": "^2.11",
        "squizlabs/php_codesniffer": "3.7.*",
        "thecodingmachine/phpstan-strict-rules": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/Danil42Russia/phpstan-kphp.git"
        }
    ]
}
